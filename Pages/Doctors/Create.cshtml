@page
@model HospitalManagementSystem.Pages.Doctors.CreateModel
@{
    ViewData["Title"] = "Add Doctor";
}

<h1>Add Doctor</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Doctor.FullName"></label>
        <input asp-for="Doctor.FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Specialty"></label>
        <input asp-for="Doctor.Specialty" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Phone"></label>
        <input asp-for="Doctor.Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Email"></label>
        <input asp-for="Doctor.Email" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-3">Save</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
