@page "{id:int}"
@model HospitalManagementSystem.Pages.Patients.DeleteModel
@{
    ViewData["Title"] = "Delete Patient";
}

<h1>Delete Patient</h1>

<h3>Are you sure you want to delete this patient?</h3>

<div>
    <strong>@Model.Patient.FullName</strong> (Age: @Model.Patient.Age)
</div>

<form method="post">
    <input type="hidden" asp-for="Patient.Id" />
    <button type="submit" class="btn btn-danger mt-2">Delete</button>
    <a asp-page="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
