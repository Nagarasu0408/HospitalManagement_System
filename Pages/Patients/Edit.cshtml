@page "{id:int}"
@model HospitalManagementSystem.Pages.Patients.EditModel
@{
    ViewData["Title"] = "Edit Patient";
}

<h1>Edit Patient</h1>

<form method="post">
    <input type="hidden" asp-for="Patient.Id" />
    <div class="form-group">
        <label asp-for="Patient.FullName"></label>
        <input asp-for="Patient.FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.Age"></label>
        <input asp-for="Patient.Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.Gender"></label>
        <input asp-for="Patient.Gender" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.Address"></label>
        <input asp-for="Patient.Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.Phone"></label>
        <input asp-for="Patient.Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.Email"></label>
        <input asp-for="Patient.Email" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
