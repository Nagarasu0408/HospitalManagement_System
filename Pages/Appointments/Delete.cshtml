@page "{id:int}"
@model HospitalManagementSystem.Pages.Appointments.DeleteModel
@{
    ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>

<p>Are you sure you want to delete the following appointment?</p>

<ul>
    <li><strong>Patient:</strong> @Model.Appointment.Patient.FullName</li>
    <li><strong>Doctor:</strong> @Model.Appointment.Doctor.FullName</li>
    <li><strong>Date:</strong> @Model.Appointment.AppointmentDate.ToString("f")</li>
</ul>

<form method="post">
    <input type="hidden" asp-for="Appointment.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
